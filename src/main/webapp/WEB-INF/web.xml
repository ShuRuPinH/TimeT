<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!--////////////////////CHECK//////////////////////////-->

  <servlet>
    <servlet-name>CheckFilter</servlet-name>
    <servlet-class>Check</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CheckFilter</servlet-name>
    <url-pattern>/check</url-pattern>
 <!--   <url-pattern>/lk_admin.jsp</url-pattern>
    <url-pattern>/lk_user.jsp</url-pattern>-->
  </servlet-mapping>

  <!--////////////////////ADMIN//////////////////////////-->
  <servlet>
    <servlet-name>Admin panel</servlet-name>
    <servlet-class>Admin</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Admin panel</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <!--////////////////////USER//////////////////////////-->
  <servlet>
    <servlet-name>User</servlet-name>
    <servlet-class>User</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>User</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <!--////////////////////EDIT_ADMIN//////////////////////////-->
  <servlet>
    <servlet-name>EditAdmin</servlet-name>
    <servlet-class>EditAdmin</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>EditAdmin</servlet-name>
    <url-pattern>/admin_edit</url-pattern>
  </servlet-mapping>
  <!--////////////////////EDIT_USERS//////////////////////////-->
  <servlet>
    <servlet-name>EditUsers</servlet-name>
    <servlet-class>EditUsers</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>EditUsers</servlet-name>
    <url-pattern>/admin_users</url-pattern>
  </servlet-mapping>
  <!--////////////////////ERROR_PAGES//////////////////////////-->
  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <!--////////////////////TO_JSP//////////////////////////-->
  <servlet>
    <servlet-name>Hello</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <!--////////////////////FILTERS//////////////////////////-->
  <filter>
    <filter-name>FilterA</filter-name>
    <filter-class>FilterA</filter-class>
    <init-param>
      <param-name>active</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>FilterA</filter-name>
    <url-pattern>/admin</url-pattern>
    <url-pattern>/lk_admin.jsp</url-pattern>
    <url-pattern>/editUser.jsp</url-pattern>
    <url-pattern>/admin_edit</url-pattern>
    <url-pattern>/admin_users</url-pattern>


  </filter-mapping>


  <filter>
    <filter-name>FilterU</filter-name>
    <filter-class>FilterU</filter-class>
    <init-param>
      <param-name>active</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>FilterU</filter-name>
    <url-pattern>/user</url-pattern>
    <url-pattern>/lk_user.jsp</url-pattern>
  </filter-mapping>

</web-app>
